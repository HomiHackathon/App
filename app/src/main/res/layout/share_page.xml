<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kevinchristianson.myapplication.ShareActivity">
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="18dp"
        android:text="Share!"
        android:textSize="20sp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="70dp"
        android:text="Item:"
        android:textSize="16sp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="50dp"
        android:scrollbars="horizontal" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="70dp"
        android:text="Due Date:"
        android:textSize="16sp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="50dp"
        android:inputType="datetime"
        android:scrollbars="horizontal" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="200dp"
        android:layout_marginTop="100dp"
        android:text="Submit" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp">

        <include layout= "@layout/share_page_element" />

    </ScrollView>

    <Button
        android:id="@+id/leftShare"
        android:layout_width="12dp"
        android:layout_height="420dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="220dp"
        android:background="@android:color/transparent"
        android:text="@string/btn_back" />

    <Button
        android:id="@+id/rightShare"
        android:layout_width="13dp"
        android:layout_height="420dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/leftShare"
        android:background="@android:color/transparent"
        android:text="@string/btn_forward" />


</RelativeLayout>
